<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - MyMood Journal</title>
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <div class="auth-container">
        <a href="/" class="back-button">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Back
        </a>
        <div class="auth-box">
            <h2>Register</h2>
            <% if(typeof errors !== 'undefined' && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <% errors.forEach(function(error) { %>
                        <p><%= error.msg %></p>
                    <% }); %>
                </div>
            <% } %>
            <form action="/users/register" method="POST" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" id="email" name="email" required value="<%= typeof email != 'undefined' ? email : '' %>">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required minlength="6">
                    <small class="form-text">Password must be at least 6 characters long</small>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm password</label>
                    <input type="password" id="password2" name="password2" required minlength="6">
                </div>
                <button type="submit" class="submit-button">Next â†’</button>
                <div class="auth-switch">
                    Already have an account? <a href="/users/login">Log In</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        function validateForm() {
            const password = document.getElementById('password').value;
            const password2 = document.getElementById('password2').value;
            
            if (password !== password2) {
                alert('Passwords do not match!');
                return false;
            }
            
            if (password.length < 6) {
                alert('Password must be at least 6 characters long!');
                return false;
            }
            
            return true;
        }
    </script>
</body>
</html> 