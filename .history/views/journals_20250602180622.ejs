<body>
    <div class="sidebar">
        <div class="logo-container">
            <img src="/images/logo.svg" alt="MyMood Journal">
            <span>MyMood Journal</span>
        </div>
        <nav class="nav-links">
            <a href="/dashboard" class="nav-link">
                <i class="fas fa-home"></i>
                My Dashboard
            </a>
            <a href="/journals" class="nav-link active">
                <i class="fas fa-book"></i>
                My Journals
            </a>
            <a href="/goals" class="nav-link">
                <i class="fas fa-bullseye"></i>
                My Goals
            </a>
            <a href="/calendar" class="nav-link">
                <i class="fas fa-calendar"></i>
                Calendar
            </a>
            <a href="/settings" class="nav-link">
                <i class="fas fa-cog"></i>
                Settings
            </a>
        </nav>
        <form action="/users/logout" method="GET">
            <button type="submit" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </button>
        </form>
    </div>

    <div class="main-content">
        <div class="header">
            <div>
                <h1>My Journals</h1>
                <p>Record your thoughts and feelings</p>
            </div>
            <button class="profile-btn">M6</button>
        </div>

        <a href="/journals/new" class="new-entry-btn">
            <i class="fas fa-plus"></i>
            New Entry
        </a>

        <% if (journals && journals.length > 0) { %>
            <ul class="journal-list">
                <% journals.forEach(journal => { %>
                    <li>
                        <a href="/journals/<%= journal.id %>" class="journal-list-item">
                            <div class="journal-item-icon-area">
                                <i class="fas fa-heart"></i>
                            </div>
                            <div class="journal-item-title-area">
                                <span><%= journal.title %></span>
                            </div>
                        </a>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <div class="no-journals">
                <p>You haven't created any journal entries yet.</p>
                <p>Click "New Entry" to get started!</p>
            </div>
        <% } %>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</body>
